<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CholestrolMonitoring" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dodgerblue</item>
        <item name="colorPrimaryVariant">@color/dodgerblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Font used in App -->
        <item name="android:fontFamily">@font/quicksand_font</item>

        <!-- Avoid Dark Mode in Mi Devices -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>
</resources>